@model List<Subscriber>

@{
    ViewBag.Title = "Subscribers";
}

<div class="heads" >
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> Subscribers</h2>
            </div>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="page-content">
        <div class="container">
            <div class="row confirm">
                <div class="col-md-12">
                    <table class="table table-striped">
                        <thead>

                           
                          
                            StartDate = sub.StartDate,
                            PayPalPlanId = sub.PayPalPlanId,
                            PayPalAgreementId = sub.PayPalAgreementId,
                            PayPalPlanDescription = sub.Description


                            <tr>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Payer Email</th>
                                <th>Payer Name</th>
                                <th>Plan</th>
                                <th>Start Date</th>
                                <th>PayPal Agreement</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.ApplicationUserFirstName  @item.ApplicationUserLastName</td>
                                <td>@item.ApplicationUserEmail</td>
                                <td>@item.PayerEmail</td>
                                <td>@item.PayerFirstName  @item.PayerLastName</td>
                                <td>@item.PayPalPlanDescription</td>
                                <td>@item.StartDate</td>
                                <td>@item.PayPalAgreementId</td>
                                <td class="text-right">
                                    <a href="@Url.Action("Details", "Subscribers" ,new {id=item.PayPalAgreementId})">View Details</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>There are no active Subscribers.</p>
}





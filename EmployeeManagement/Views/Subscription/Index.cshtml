@model AndyTipsterPro.ViewModels.IndexVm

@{
    ViewBag.Title = "Subscription Plans";
}

    <div class="heads">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Our Subscriptions</h2>
                    <p>Once subscribe you will be able to manage them in your PapPal account.</p>                    
                </div>
            </div>
        </div>
    </div>

<div class="page-content">
    <div class="container">
        <div class="row confirm">
            <div class="col-sm-10 col-md-12">
                <table class="table table-striped table-responsive" style="font-size:small;">
                    <thead>
                        <tr>
                            <th>Subscription</th>
                            <th>Description</th>
                            <th class="text-right">Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@(item.Description)</td>
                                <td class="text-right">£@((item.Price / 100M).ToString("0.00"))</td>
                                <td class="text-right">
                                    <a href="@Url.Action("Purchase", "Subscription", new {id = item.PayPalPlanId})" class="btn btn-primary btn-sm">Subscribe</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


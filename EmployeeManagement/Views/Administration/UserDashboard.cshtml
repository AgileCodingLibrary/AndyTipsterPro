@model AndyTipsterPro.ViewModels.UserDashBoardViewModel

@{
    ViewBag.Title = "Customer Dashboard";
}

<div class="heads">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Customers</h2>
                <p>Dashboard offers one stop for viewing all your customers and their subscriptions.</p>
            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.Customers.Count() > 0)
{
    <div class="page-content">
        <div class="container">
            <div class="row confirm">
                <div class="col-sm-10 col-md-12">
                    <table class="table table-striped table-responsive" style="font-size:small;">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>User Name</th>
                                <th>SendEmails</th>                               
                                <th>Elite Allowed</th>
                                <th>Combo Allowed</th>
                                <th>UK-Racing Allowed</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>@customer.FirstName  @customer.LastName </td>
                                    <td><a asp-action="UserDetails" asp-controller="Administration" asp-route-userId="@customer.Id">@customer.Email</a></td>
                                    <td>@customer.UserName</td>
                                    <td>@customer.SendEmails</td>                                    
                                    <td>@customer.CanSeeElitePackage</td>
                                    <td>@customer.CanSeeComboPackage</td>
                                    <td>@customer.CanSeeUKRacingPackage</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2>There are no Customers.</h2>
}


